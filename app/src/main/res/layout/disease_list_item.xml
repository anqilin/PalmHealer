<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150px"
    android:background="@drawable/firstpage_btn_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/disease_item_num_tx"
        android:text="1"
        android:gravity="center"
        android:layout_marginLeft="37px"
        android:layout_gravity="center"
        android:background="@mipmap/disease_item_num_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/disease_item_tx"
        android:paddingLeft="40px"
        android:layout_gravity="center"
        android:text="发  烧"
        android:layout_width="900px"
        android:layout_height="wrap_content" />

    <ImageView
        android:background="@mipmap/disease_item_right_mark"
        android:gravity="center"
        android:layout_marginRight="37px"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</com.zhy.autolayout.AutoLinearLayout>